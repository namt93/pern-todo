{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "./src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true, // Enable strict mode for better type checking
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}